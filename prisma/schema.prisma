generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  tg_id       Int        @default(0)
  name        String     @unique
  jsondata    String     @default("NO JSON DATA")
  phone       String     @default("")
  role        Role       @default(USER)
  isRegistred Boolean    @default(false)
  Meterings   Metering[]
}

model Check {
  id        Int        @id @default(autoincrement())
  summa     Float      @default(12000.2)
  intake    Int        @default(0)
  closed    Boolean    @default(false)
  createdAt DateTime   @default(now())
  date      DateTime   @default(now())
  Meterings Metering[]
}

model Metering {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  num          String
  value        Int      @default(0)
  intake       Int      @default(0)
  payment      Float    @default(0.0)
  contribution Float    @default(0.0)
  isNoValue    Boolean  @default(true)
  isCommon     Boolean  @default(false)
  checkId      Int
  userId       Int
  Check        Check    @relation(fields: [checkId], references: [id])
  User         User     @relation(fields: [userId], references: [id])
}

/// The underlying view does not contain a valid unique identifier and can therefore currently not be handled by Prisma Client.
view MeteringInfo {
  id           Int       @unique
  createdAt    DateTime?
  num          String?
  value        Int?
  intake       Int?
  payment      Float?
  contribution Float?
  isNoValue    Boolean?
  isCommon     Boolean?
  checkId      Int?
  userId       Int?
  name         String?
  checkintake  Int?
  summa        Float?
}

enum Role {
  USER
  ADMIN
  GUEST
}
