generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  tg_id       Int       @default(0)
  name        String    @unique
  phone       String    @default("")
  role        Role      @default(USER)
  isRegistred Boolean   @default(false)
  counters    Counter[]
}

model Counter {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  isCommon Boolean    @default(false)
  userId   Int
  user     User       @relation(fields: [userId], references: [id])
  Metering Metering[]
}

model Check {
  id        Int        @id @default(autoincrement())
  summa     Float      @default(12000.2)
  intake    Int        @default(0)
  closed    Boolean    @default(false)
  createdAt DateTime   @default(now())
  date      DateTime   @default(now())
  Meterings Metering[]
}

model Metering {
  id           Int      @id @default(autoincrement())
  createdAt    DateTime @default(now())
  num          String
  value        Int      @default(0)
  intake       Int      @default(0)
  payment      Float    @default(0.0)
  contribution Float    @default(0.0)
  isNoValue    Boolean  @default(true)
  isCommon     Boolean  @default(false)
  checkId      Int
  counterId    Int
  check        Check    @relation(fields: [checkId], references: [id])
  counter      Counter  @relation(fields: [counterId], references: [id])
}

enum Role {
  USER
  ADMIN
  GUEST
}
